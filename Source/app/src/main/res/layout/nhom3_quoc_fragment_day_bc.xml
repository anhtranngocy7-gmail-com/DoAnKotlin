<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".BarChart.Nhom3QuocFragmentDay_BC">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contrainLayoutCalendar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="25dp"
                android:background="@color/sub_main_background">


                <ImageView
                    android:id="@+id/imageView5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icon_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvFrom"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="68dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="29/05/2021"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/view2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvFrom"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="10dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tvTo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/view2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="28/05/20201"
                    android:textSize="18sp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="(Đơn vị: Triệu)"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/contrainLayoutCalendar"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChartDay"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:layout_marginTop="30dp"
               app:layout_constraintTop_toBottomOf="@+id/contrainLayoutCalendar"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleviewDayBC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/sub_main_background"
                app:layout_constraintTop_toBottomOf="@+id/lineChartDay"
                 />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</layout>