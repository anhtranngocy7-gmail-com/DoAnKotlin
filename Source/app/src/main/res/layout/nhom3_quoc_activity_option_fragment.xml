<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">


    <LinearLayout
        android:id="@+id/linear_head_tichluy"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/head_title_shape"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="Chức năng khác"
            android:textSize="30dp" />
    </LinearLayout>



        <LinearLayout
            android:id="@+id/linearLayoutTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sub_main_background"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/linear_head_tichluy">

            <TextView
                android:id="@+id/tvSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_setting"
                android:drawablePadding="8dp"
                android:padding="16dp"
                android:text="Cài đặt"
                android:textSize="24sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Hiển thị"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tvVietNamese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:padding="16dp"
                    android:text="Tiếng Việt"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvTimeSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvShow"
                    android:padding="16dp"
                    android:text="Định dạng thời gian"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvDMY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvVietNamese"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:padding="16dp"
                    android:text="dd/MM/yyyy"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvCurrencySetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTimeSetting"
                    android:padding="16dp"
                    android:text="Thiết lập tiền tệ"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvVND"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDMY"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:padding="16dp"
                    android:text="VND"
                    android:textSize="18sp" />

            </RelativeLayout>

        </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/sub_main_background"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEvalue"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_danhgia"
            android:text="Đánh giá"
            android:textSize="24sp"
            android:drawablePadding="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAnotherAccount"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_taikhoankhac"
            android:text="Tài khoản khác"
            android:textSize="24sp"
            android:drawablePadding="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLogout"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_dangxuat"
            android:text="Đăng xuất"
            android:textSize="24sp"
            android:drawablePadding="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvHelp"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_trogiup"
            android:text="Trợ giúp"
            android:textSize="24sp"
            android:drawablePadding="16dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>