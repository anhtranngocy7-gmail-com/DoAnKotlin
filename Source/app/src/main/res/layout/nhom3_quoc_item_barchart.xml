<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <TextView
        android:id="@+id/tvTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Tháng 4"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTittle"
        app:layout_constraintStart_toEndOf="@+id/tvTittle"
        app:layout_constraintTop_toTopOf="@+id/tvTittle"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/dot_green" />

    <ImageView
        android:id="@+id/imageChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/tvTittle"
        app:layout_constraintTop_toBottomOf="@+id/imageThu"
        app:srcCompat="@drawable/dot_red" />

     <TextView
        android:id="@+id/tvThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Thu:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imageThu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Chi:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imageChi"
        app:layout_constraintTop_toBottomOf="@+id/tvThu" />

    <View
        android:id="@+id/viewlineBC"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="230dp"
        android:layout_marginEnd="24dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvMoneyLost"
        app:layout_constraintBottom_toTopOf="@+id/tvMoneyTotal"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvMoneyTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:text="12.000.000 đ"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMoneyLost" />

    <TextView
        android:id="@+id/tvMoneyLost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="30dp"
        android:text="5.000.000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/tvChi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMoneyColect" />

    <TextView
        android:id="@+id/tvMoneyColect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp"
        android:text="7.000.000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tvThu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>